@import "../template/music.wxss";
@import "../template/public/playerBottem.wxss";

.cantaner{
	padding-bottom:150rpx;
}


/* 头部 */
.header{
	padding: 5px;
	display: flex;
	background:#9DE8F7;
	justify-content: center;
	color: white;
}
.header navigator{
	padding: 0 15px 8px;
}
.header navigator.on{
	background: linear-gradient(#fff,#fff) no-repeat center bottom/90% 2px;
}
/* 轮播图 */
.home-banner {
	background: linear-gradient(#9DE8F7,#9DE8F7) no-repeat center top/100% 100px;
}

.home-banner swiper-item {
	box-sizing: border-box;
	padding: 0 10px;
}
.home-banner image{
	display: block;
	border-radius: 5px;
	width: 100%;
	height: 100%
}
/* 地区 */
.home-area{
	padding: 15px 0 20px;
	display: flex;
	justify-content: space-around;
	border-bottom: 1px solid #eee
}

.home-area navigator image{
	width: 80rpx;
}
.home-area navigator text{
	display: block;
	text-align: center;
}

