/* 底部播放 */
.bottom-play{
	width: 100%;
	padding: 5px;
	box-sizing: border-box;
	position: fixed;
	bottom: 0;
	left: 0;
	background: rgb(255, 255, 255);

}
.bottom-play .play-cover{
	float: left;
	height:35px;
	width: 35px; 
}
.play-album{
	display: block;
	overflow: hidden;
}
.lay-album:nth-last-child(1){
	display: block;
	font-size: 11px;
}
.bottom-play .play-cover image{
	width: 100%;
	height: 100%;
}
.play-btn{
	float: right;
	height:35px;
	width: 35px;
}
.play-btn image{
	float: right;
	width: 100%;
	height: 100%;
}
